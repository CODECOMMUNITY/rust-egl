include config.mk

VPATH=%VPATH%
PATH=$(CFG_PATH)

RUSTFLAGS += --target $(CFG_HOST_TRIPLE)

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all:	librustegl.dummy

%.o:	%.c
	$(CFG_GCC) $< -o $@ -c $(CFLAGS)

librustegl.dummy: egl.rc $(RUST_SRC)
	$(CFG_RUSTC) $(RUSTFLAGS) $< -o $@
	touch $@

rustegl-test: egl.rc $(RUST_SRC)
	$(CFG_RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: rustegl-test
	./rustegl-test

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test

